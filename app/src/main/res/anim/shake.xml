<?xml version="1.0" encoding="utf-8"?>
<!--Make the button shake-->
<!--Source: https://stackoverflow.com/questions/18221581/how-to-animate-button-in-android-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="50"
        android:fromDegrees="-3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="10"
        android:repeatMode="reverse"
        android:toDegrees="3" />
</set>